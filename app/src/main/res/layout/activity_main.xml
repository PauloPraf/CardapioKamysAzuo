<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="58dp"
        app:layout_constraintBottom_toTopOf="@+id/bttcardapioinic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/bttcardapioinic"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="63dp"
        android:layout_marginLeft="63dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="30dp"
        android:text="Cardápio"
        android:textSize="18sp"
        android:textStyle="bold"
        app:backgroundTint="#1AC69C"
        app:cornerRadius="15dp"
        app:layout_constraintBottom_toTopOf="@+id/iconelocalizacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/iconelocalizacao"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="97dp"
        android:layout_marginLeft="97dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/bttloginfunc"
        app:layout_constraintEnd_toStartOf="@+id/bttloginfunc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bttcardapioinic"
        app:srcCompat="@drawable/localizacao_logo"
        android:contentDescription="TODO" />

    <Button
        android:id="@+id/bttlocalizacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="121dp"
        android:layout_marginRight="121dp"
        android:layout_marginBottom="51dp"
        android:background="#00FFFFFF"
        android:backgroundTint="@color/white"
        android:elegantTextHeight="false"
        android:foregroundTint="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:text="Encontre-nos"
        android:textColor="#000000"
        android:textStyle="bold"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/txtefunc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iconelocalizacao" />

    <TextView
        android:id="@+id/txtefunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="83dp"
        android:text="É um funcionario?"
        android:textColor="#090909"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bttloginfunc"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bttloginfunc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="72dp"
        android:background="#00FFFFFF"
        android:backgroundTint="@color/white"
        android:elegantTextHeight="false"
        android:foregroundTint="#00FFFFFF"
        android:shadowColor="#00FFFFFF"
        android:text="Fazer Login"
        android:textAllCaps="false"
        android:textColor="#CA1717"
        app:iconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtefunc"
        app:layout_constraintTop_toBottomOf="@+id/iconelocalizacao" />


</androidx.constraintlayout.widget.ConstraintLayout>

